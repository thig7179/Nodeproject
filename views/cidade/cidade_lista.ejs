<hr>
<table class="table striped centered">
    <thead>
    <tr>
        <th>Codigo</th>
        <th>Descrição</th>
        <th>Estado</th>
        <th>Habitantes</th>
        <th>Força econômica</th>
        <th>Ano de fundação</th>
        <th>Região</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    <% for (cidade of cidades){ %>
    <tr>
        <td>
            <%= cidade.CID_CODIGO %>
        </td>
        <td>
            <%= cidade.CID_DESCRICAO %>
        </td>
        <td>
            <%= cidade.CID_ESTADO %>
        </td>
        <td>
            <%= cidade.CID_HABITANTES %>
        </td>
        <td>
            <%= cidade.CID_ECONOMICA %>
        </td>
        <td>
            <%= cidade.CID_ANO_FUNDACAO %>
        </td>
        <td>
            <%= cidade.REG_DESCRICAO %>
        </td>
        <td class="actions">
            <div class="action-buttons">
                <a class="waves-effect btn-flat green lighten-5 action-btn tooltipped" data-position="top"
                   data-tooltip="Visualizar"
                   href=<%= "/cidades/show/" + cidade.CID_CODIGO %>>
                    <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                        <path fill="#00c853"
                              d="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z"/>
                    </svg>
                </a>
                <a class="btn-flat action-btn amber lighten-5 waves-effect tooltipped" data-position="top"
                   data-tooltip="Editar"
                   href=<%= "/cidades/update/" + cidade.CID_CODIGO %>>
                    <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                        <path fill="#ffb300"
                              d="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z"/>
                    </svg>
                </a>
                <a class="btn-flat red lighten-5 action-btn waves-effect confirmation tooltipped" data-position="top"
                   data-tooltip="Excluir"
                   href=<%= "/cidades/delete/" + cidade.CID_CODIGO %>>
                    <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                        <path fill="#d50000"
                              d="M2,6V8H14V6H2M2,10V12H11V10H2M14.17,10.76L12.76,12.17L15.59,15L12.76,17.83L14.17,19.24L17,16.41L19.83,19.24L21.24,17.83L18.41,15L21.24,12.17L19.83,10.76L17,13.59L14.17,10.76M2,14V16H11V14H2Z"/>
                    </svg>
                </a>
            </div>
        </td>
    </tr>
    <% } %>
    </tbody>
</table>

